<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CusTint="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_item_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/main_marg1"
    android:paddingTop="@dimen/main_marg1"
    android:paddingBottom="@dimen/main_marg1"
    android:paddingRight="@dimen/main_marg1"
    android:paddingEnd="@dimen/main_marg1"
    android:paddingStart="@dimen/main_marg1">

    <com.solutionsbricks.solbricksframework.helpers.TintImageView
        CusTint:tintVal="@color/x_drawer_icon_normal"
        android:id="@+id/drawer_item_icon"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/answers"
        android:layout_alignParentStart="true" />

    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
        android:id="@+id/drawer_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/drawer_item_icon"
        android:gravity="start"
        android:textColor="@color/x_drawer_list_item_text"
        android:textSize="19sp"
        android:textAlignment="viewStart"
        android:layout_margin="15dp"
        android:text="asdasdas"
        android:layout_toEndOf="@id/drawer_item_icon" />

</RelativeLayout>