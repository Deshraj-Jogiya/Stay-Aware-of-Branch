<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CusTint="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="fill_parent"
    android:layout_height="58dp"
    android:background="@color/user_colored_header_back"
    android:padding="10dp">


    <com.solutionsbricks.solbricksframework.helpers.TintImageView
        android:id="@+id/head_drawer_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:paddingRight="5dp"
        android:src="@drawable/ic_drawer"
        CusTint:tintVal="@color/x_header_icons" />

    <com.solutionsbricks.solbricksframework.helpers.CustomImageView
        android:id="@+id/head_drawer_img"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/head_drawer_toggle"
        android:layout_toRightOf="@id/head_drawer_toggle"
        android:paddingTop="@dimen/header_top"
        android:src="@drawable/default_place_holder"
        android:visibility="gone" />

    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
        android:id="@+id/head_drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/head_drawer_img"
        android:layout_toRightOf="@id/head_drawer_img"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:text="Roots Abacus"
        android:textColor="@color/x_header_text"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>