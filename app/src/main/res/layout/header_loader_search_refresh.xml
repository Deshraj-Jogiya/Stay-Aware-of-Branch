<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CusTint="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="fill_parent"
    android:layout_height="58dp"
    android:background="@color/x_header_back"
    android:padding="10dp">


    <com.solutionsbricks.solbricksframework.helpers.TintImageView
        android:id="@+id/head_drawer_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:paddingRight="5dp"
        android:src="@drawable/ic_drawer"
        CusTint:tintVal="@color/x_header_icons" />

    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
        android:id="@+id/head_drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        android:layout_toEndOf="@id/head_drawer_toggle"
        android:layout_toRightOf="@id/head_drawer_toggle"
        android:gravity="start"
        android:text="Roots Abacus"
        android:textAlignment="viewStart"
        android:textColor="@color/x_header_text"
        android:textSize="15sp" />


    <com.solutionsbricks.solbricksframework.helpers.TintImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_search"
        CusTint:tintVal="@color/x_header_icons" />

    <ProgressBar
        android:id="@+id/gen_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/search"
        android:layout_toStartOf="@id/search"
        android:indeterminateTint="@color/x_header_icons"
        android:indeterminateTintMode="src_atop" />

    <com.solutionsbricks.solbricksframework.helpers.TintImageView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/search"
        android:src="@drawable/ic_refresh"
        CusTint:tintVal="@color/x_header_icons" />
</RelativeLayout>