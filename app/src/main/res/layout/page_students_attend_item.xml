<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardPreventCornerOverlap="false"
        android:id="@+id/card"
        card_view:cardBackgroundColor="@color/x_boxes_container_back"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/main_marg2">

        <RelativeLayout
            android:id="@+id/holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/menu_icons_padd1"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:id="@+id/header_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <com.schoolmgmtsys.root.ssg.fonts.RegularStyledTextView
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:id="@+id/header_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingStart="15dp"
                        android:paddingRight="@dimen/header_top"
                        android:paddingTop="@dimen/header_top"
                        android:text="NA"
                        android:textSize="@dimen/header_title"
                        android:textColor="@color/x_boxes_header_text"
                        android:paddingEnd="@dimen/header_top"/>

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_below="@id/header_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="17dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/footer_subject_con"
                    android:layout_width="0dp"
                    android:layout_weight="45"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/footer_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/footer_subject_icn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/menu_icons_padd1"
                            android:paddingRight="@dimen/menu_icons_padd1"
                            android:paddingBottom="@dimen/menu_icons_padd1"
                            android:src="@drawable/icon_pages_subjects"
                            android:paddingEnd="@dimen/menu_icons_padd1"
                            android:layout_marginLeft="@dimen/footer_left"
                            android:layout_marginStart="@dimen/footer_left" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical">

                            <com.schoolmgmtsys.root.ssg.fonts.BoldStyledTextView
                                android:textAlignment="viewStart"
                                android:gravity="start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subject"
                                android:textSize="@dimen/footer_title"
                                android:textColor="@color/x_boxes_header_text"
                                android:id="@+id/Subject" />

                            <com.schoolmgmtsys.root.ssg.fonts.RegularStyledTextView
                                android:textAlignment="viewStart"
                                android:gravity="start"
                                android:id="@+id/footer_subject_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA"
                                android:textSize="@dimen/footer_data"
                                android:textColor="@color/x_boxes_sub_title_text" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:paddingLeft="15dp"
                    android:paddingStart="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/footer_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/header_top"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/header_top">

                        <ImageView
                            android:id="@+id/footer_status_icn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/menu_icons_padd1"
                            android:paddingRight="@dimen/menu_icons_padd1"
                            android:paddingBottom="@dimen/menu_icons_padd1"
                            android:src="@drawable/icon_pages_notes"
                            android:paddingEnd="@dimen/menu_icons_padd1" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical">

                            <com.schoolmgmtsys.root.ssg.fonts.BoldStyledTextView
                                android:textAlignment="viewStart"
                                android:gravity="start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attendance"
                                android:textSize="@dimen/footer_title"
                                android:textColor="@color/x_boxes_header_text"
                                android:id="@+id/Attendance" />

                            <com.schoolmgmtsys.root.ssg.fonts.RegularStyledTextView
                                android:textAlignment="viewStart"
                                android:gravity="start"
                                android:id="@+id/footer_status_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA"
                                android:textSize="@dimen/footer_data"
                                android:textColor="@color/x_boxes_sub_title_text" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>