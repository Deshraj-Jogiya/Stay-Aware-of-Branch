<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="14dp"
        card_view:cardBackgroundColor="@color/x_boxes_container_back"
        card_view:cardElevation="4sp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <RelativeLayout
                        android:id="@+id/header_con"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                            android:id="@+id/header_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/grade_con"
                            android:layout_toStartOf="@+id/grade_con"
                            android:paddingEnd="@dimen/header_top"
                            android:paddingLeft="@dimen/header_left"
                            android:paddingRight="@dimen/header_top"
                            android:paddingStart="@dimen/header_left"
                            android:paddingTop="@dimen/header_top"
                            android:text="NA"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            android:textColor="@color/x_boxes_header_text"
                            android:textSize="20sp" />


                        <LinearLayout
                            android:id="@+id/grade_con"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:paddingEnd="@dimen/main_marg2"
                            android:paddingRight="@dimen/main_marg2"
                            android:paddingTop="@dimen/main_marg2">

                            <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                                android:id="@+id/grade_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="NA"
                                android:gravity="start"
                                android:textAlignment="viewStart"
                                android:textColor="@color/x_boxes_header_text"
                                android:textSize="@dimen/header_sub_char" />

                            <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                                android:id="@+id/Grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Grade"
                                android:textAlignment="center"
                                android:textColor="@color/x_boxes_header_text"
                                android:textSize="@dimen/header_sub_content" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/header_div"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/header_con"
                        android:layout_margin="@dimen/menu_icons_padd2"
                        android:background="@color/boxes_footer_div" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/header_menu"
                android:layout_toEndOf="@id/header_char"
                android:layout_toRightOf="@id/header_char"
                android:orientation="vertical"
                android:paddingBottom="@dimen/header_top">


                <LinearLayout
                    android:id="@+id/footer_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:layout_marginBottom="@dimen/menu_icons_padd1"
                    android:layout_marginEnd="@dimen/menu_icons_padd1"
                    android:layout_marginLeft="@dimen/footer_left"
                    android:layout_marginRight="@dimen/menu_icons_padd1"
                    android:layout_marginStart="@dimen/footer_left"
                    android:layout_marginTop="@dimen/menu_icons_padd1"
                    android:orientation="vertical">


                    <com.schoolmgmtsys.root.ssg.fonts.BoldStyledTextView
                        android:id="@+id/Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="@color/x_boxes_header_text"
                        android:textSize="@dimen/footer_title" />

                    <com.schoolmgmtsys.root.ssg.fonts.RegularStyledTextView
                        android:id="@+id/footer_status_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NA"
                        android:layout_gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="@color/x_boxes_sub_title_text"
                        android:textSize="@dimen/footer_data" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/footer_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/footer_comment_icn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/menu_icons_padd1"
                        android:layout_marginEnd="@dimen/menu_icons_padd1"
                        android:layout_marginLeft="@dimen/footer_left"
                        android:layout_marginRight="@dimen/menu_icons_padd1"
                        android:layout_marginStart="@dimen/footer_left"
                        android:layout_marginTop="@dimen/menu_icons_padd1"
                        android:src="@drawable/icon_pages_notes" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <com.schoolmgmtsys.root.ssg.fonts.BoldStyledTextView
                            android:id="@+id/Comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            android:textColor="@color/x_boxes_header_text"
                            android:textSize="@dimen/footer_title" />

                        <com.schoolmgmtsys.root.ssg.fonts.RegularStyledTextView
                            android:id="@+id/footer_comment_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Comment"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            android:textColor="@color/x_boxes_sub_title_text"
                            android:textSize="@dimen/footer_data" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/header_div2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/footer"
                android:layout_margin="@dimen/menu_icons_padd2"
                android:background="@color/boxes_footer_div" />

            <LinearLayout
                android:id="@+id/footer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_div2"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/header_top">


                <LinearLayout
                    android:id="@+id/pass_grade_con"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/main_marg2"
                    android:paddingRight="@dimen/main_marg2">

                    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                        android:id="@+id/pass_grade_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="NA"
                        android:textColor="@color/x_boxes_header_text"
                        android:textSize="@dimen/header_sub_char" />

                    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                        android:id="@+id/passGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Pass Grade"
                        android:textColor="@color/x_boxes_header_text"
                        android:textSize="@dimen/header_sub_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/final_grade_con"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/main_marg2"
                    android:paddingRight="@dimen/main_marg2">

                    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                        android:id="@+id/final_grade_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="NA"
                        android:textColor="@color/x_boxes_header_text"
                        android:textSize="@dimen/header_sub_char" />

                    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                        android:id="@+id/finalGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Final Grade"
                        android:textColor="@color/x_boxes_header_text"
                        android:textSize="@dimen/header_sub_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exam_mark_con"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/main_marg2"
                    android:paddingRight="@dimen/main_marg2">

                    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                        android:id="@+id/exam_mark_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="NA"
                        android:textColor="@color/x_boxes_header_text"
                        android:textSize="@dimen/header_sub_char" />

                    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
                        android:id="@+id/examMarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Exam Mark"
                        android:textColor="@color/x_boxes_header_text"
                        android:textSize="@dimen/header_sub_content" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/header_div3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/footer2"
                android:layout_margin="@dimen/menu_icons_padd2"
                android:background="@color/boxes_footer_div" />

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/footer3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_div3"
                android:layout_margin="@dimen/menu_icons_padd2"
                android:gravity="fill"
                android:orientation="horizontal">

            </org.apmem.tools.layouts.FlowLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>