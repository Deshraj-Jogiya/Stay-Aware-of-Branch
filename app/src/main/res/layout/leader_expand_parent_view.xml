<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/x_boxes_header_back"
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.schoolmgmtsys.root.ssg.fonts.MediumStyledTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dash_stat_txt"
        android:textColor="@color/x_boxes_main_text"
        android:id="@+id/parent_title"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/arrow_expand_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/selector_arrow_down" />

</RelativeLayout>