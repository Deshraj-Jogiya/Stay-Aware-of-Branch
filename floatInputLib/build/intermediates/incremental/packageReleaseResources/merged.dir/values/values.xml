<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FloatingLabelAutoCompleteTextView">
        <attr name="android:dropDownHeight"/>
        <attr name="android:dropDownWidth"/>
        <attr name="android:popupBackground"/>
        <attr name="android:completionThreshold"/>
        <attr name="android:completionHint"/>
    </declare-styleable>
    <declare-styleable name="FloatingLabelEditText">
        <attr name="android:inputType"/>
    </declare-styleable>
    <declare-styleable name="FloatingLabelTextViewBase">
        <attr name="android:drawableRight"/>
        <attr name="android:drawableLeft"/>
        <attr name="android:drawablePadding"/>
        <attr format="reference" name="flw_inputWidgetTextAppearance"/>
        <attr format="color" name="flw_inputWidgetTextColor"/>
        <attr format="dimension" name="flw_inputWidgetTextSize"/>
    </declare-styleable>
    <declare-styleable name="FloatingLabelWidgetBase">
        <attr name="android:layout"/>
        <attr format="string" name="flw_labelText"/>
        <attr format="boolean" name="flw_floatOnFocus"/>
        <attr format="reference" name="flw_labelTextAppearance"/>
        <attr format="color" name="flw_labelTextColor"/>
        <attr format="dimension" name="flw_labelTextSize"/>
    </declare-styleable>
    <dimen name="flw_defaultDropDownItemPadding">16dp</dimen>
    <dimen name="flw_defaultDropDownItemTextSize">14sp</dimen>
    <dimen name="flw_defaultInputWidgetTextSize">14sp</dimen>
    <dimen name="flw_defaultLabelTextSize">14sp</dimen>
    <item name="flw_floating_label" type="id"/>
    <item name="flw_input_widget" type="id"/>
    <style name="FloatingLabelWidget" parent="@android:style/Widget.Holo">
    </style>
    <style name="FloatingLabelWidget.DropDownItem" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textSize">@dimen/flw_defaultDropDownItemTextSize</item>
        <item name="android:padding">@dimen/flw_defaultDropDownItemPadding</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="FloatingLabelWidget.InputWidget.AutoCompleteTextView" parent="@android:style/Widget.Holo.AutoCompleteTextView">
        <item name="android:background">@drawable/bg_edittext</item>
    </style>
    <style name="FloatingLabelWidget.InputWidget.Chooser" parent="@android:style/Widget.Holo.TextView">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:drawableRight">@drawable/ic_chooser</item>
    </style>
    <style name="FloatingLabelWidget.InputWidget.EditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
    </style>
    <style name="FloatingLabelWidget.InputWidget.Picker" parent="@android:style/Widget.Holo.TextView">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:drawableRight">@drawable/ic_picker</item>
    </style>
    <style name="FloatingLabelWidget.InstantPicker">
    </style>
    <style name="FloatingLabelWidget.ItemChooser">
    </style>
    <style name="FloatingLabelWidget.ItemPicker">
    </style>
    <style name="FloatingLabelWidget.Label" parent="@android:style/Widget.Holo.TextView">
        <item name="android:lines">1</item>
    </style>
    <style name="FloatingLabelWidget.Label.AutoCompleteTextView">
    </style>
    <style name="FloatingLabelWidget.Label.Chooser">
    </style>
    <style name="FloatingLabelWidget.Label.EditText">
    </style>
    <style name="FloatingLabelWidget.Label.Picker">
    </style>
</resources>